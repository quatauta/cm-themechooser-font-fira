<?xml version="1.0" encoding="utf-8"?>
<familyset version="22">
    <!-- first font is default -->
    <family name="sans-serif">
        <font weight="100" style="normal">FiraSans-Thin.otf</font>
        <font weight="100" style="italic">FiraSans-ThinItalic.otf</font>
        <font weight="200" style="normal">FiraSans-UltraLight.otf</font>
        <font weight="200" style="italic">FiraSans-UltraLightItalic.otf</font>
        <font weight="300" style="normal">FiraSans-Light.otf</font>
        <font weight="300" style="italic">FiraSans-LightItalic.otf</font>
        <font weight="400" style="normal">FiraSans-Regular.otf</font>
        <font weight="400" style="italic">FiraSans-Italic.otf</font>
        <font weight="500" style="normal">FiraSans-Medium.otf</font>
        <font weight="500" style="italic">FiraSans-MediumItalic.otf</font>
        <font weight="600" style="normal">FiraSans-SemiBold.otf</font>
        <font weight="600" style="italic">FiraSans-SemiBoldItalic.otf</font>
        <font weight="700" style="normal">FiraSans-Bold.otf</font>
        <font weight="700" style="italic">FiraSans-BoldItalic.otf</font>
        <font weight="800" style="normal">FiraSans-Heavy.otf</font>
        <font weight="800" style="italic">FiraSans-HeavyItalic.otf</font>
        <font weight="900" style="normal">FiraSans-Ultra.otf</font>
        <font weight="900" style="italic">FiraSans-UltraItalic.otf</font>
    </family>

    <!-- Note that aliases must come after the fonts they reference. -->
    <alias name="sans-serif-thin" to="sans-serif" weight="100" />
    <alias name="sans-serif-light" to="sans-serif" weight="300" />
    <alias name="sans-serif-medium" to="sans-serif" weight="500" />
    <alias name="sans-serif-black" to="sans-serif" weight="800" />
    <alias name="arial" to="sans-serif" />
    <alias name="helvetica" to="sans-serif" />
    <alias name="tahoma" to="sans-serif" />
    <alias name="verdana" to="sans-serif" />

    <family name="sans-serif-condensed">
        <font weight="100" style="normal">FiraSansCondensed-Thin.otf</font>
        <font weight="100" style="italic">FiraSansCondensed-ThinItalic.otf</font>
        <font weight="200" style="normal">FiraSansCondensed-UltraLight.otf</font>
        <font weight="200" style="italic">FiraSansCondensed-UltraLightItalic.otf</font>
        <font weight="300" style="normal">FiraSansCondensed-Light.otf</font>
        <font weight="300" style="italic">FiraSansCondensed-LightItalic.otf</font>
        <font weight="400" style="normal">FiraSansCondensed-Regular.otf</font>
        <font weight="400" style="italic">FiraSansCondensed-Italic.otf</font>
        <font weight="500" style="normal">FiraSansCondensed-Medium.otf</font>
        <font weight="500" style="italic">FiraSansCondensed-MediumItalic.otf</font>
        <font weight="600" style="normal">FiraSansCondensed-SemiBold.otf</font>
        <font weight="600" style="italic">FiraSansCondensed-SemiboldItalic.otf</font>
        <font weight="700" style="normal">FiraSansCondensed-Bold.otf</font>
        <font weight="700" style="italic">FiraSansCondensed-BoldItalic.otf</font>
        <font weight="800" style="normal">FiraSansCondensed-Heavy.otf</font>
        <font weight="800" style="italic">FiraSansCondensed-HeavyItalic.otf</font>
        <font weight="900" style="normal">FiraSansCondensed-Ultra.otf</font>
        <font weight="900" style="italic">FiraSansCondensed-UltraItalic.otf</font>
    </family>

    <family name="monospace">
        <font weight="400" style="normal">FiraMono-Regular.otf</font>
        <font weight="500" style="normal">FiraMono-Medium.otf</font>
        <font weight="700" style="normal">FiraMono-Bold.otf</font>
    </family>
    <alias name="sans-serif-monospace" to="monospace" />
    <alias name="monaco" to="monospace" />

</familyset>
